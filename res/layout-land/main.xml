<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:rowCount="4"
        android:columnCount="6">
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:layout_column="0" android:layout_row="0"
            android:id="@+id/oh_billy" 
            android:src="@drawable/oh_billy" android:contentDescription="@string/oh_billy" android:focusable="false"
            android:clickable="true" android:layout_marginLeft="@dimen/between_buttons" android:onClick="playClip"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/play_here"
            android:src="@drawable/play_here_too" android:onClick="playClip"
            android:layout_column="1" android:layout_row="0" android:layout_marginLeft="@dimen/between_buttons"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/woman_like_that"
            android:src="@drawable/woman_like_that" android:onClick="playClip"
            android:layout_column="2" android:layout_row="0" android:layout_marginLeft="@dimen/between_buttons"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/talk_to_me"
            android:src="@drawable/talk_to_me" android:onClick="playClip"
            android:layout_column="3" android:layout_row="0" android:layout_marginLeft="@dimen/between_buttons"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/wanna_hang_out"
            android:src="@drawable/wanna_hang_out" android:onClick="playClip"
            android:layout_column="4" android:layout_row="0" android:layout_marginLeft="@dimen/between_buttons"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/decided_to_show"
            android:src="@drawable/decided_to_show" android:onClick="playClip"
            android:layout_column="5" android:layout_row="0" android:layout_marginLeft="@dimen/between_buttons"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/tardy_one"
            android:src="@drawable/tardy_one" android:onClick="playClip"
            android:layout_column="0" android:layout_row="1" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
            />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/jerk_off"
            android:src="@drawable/jerk_off" android:onClick="playClip"
            android:layout_column="1" android:layout_row="1" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/i_hate_you"
            android:src="@drawable/i_hate_you" android:onClick="playClip"
            android:layout_column="2" android:layout_row="1" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/red_night"
            android:src="@drawable/red_night" android:onClick="playClip"
            android:layout_column="3" android:layout_row="1" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/juice_ya_up"
            android:src="@drawable/juice_ya_up" android:onClick="playClip"
            android:layout_column="4" android:layout_row="1" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/bribe"
            android:src="@drawable/bribe" android:onClick="playClip"
            android:layout_column="5" android:layout_row="1" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/mug_of_ale"
            android:src="@drawable/mug_of_ale" android:onClick="playClip"
            android:layout_column="0" android:layout_row="2" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/medieval_times"
            android:src="@drawable/medieval_times" android:onClick="playClip"
            android:layout_column="1" android:layout_row="2" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/baby_born"
            android:src="@drawable/baby_born" android:onClick="playClip"
            android:layout_column="2" android:layout_row="2" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/summer_of_love"
            android:src="@drawable/summer_of_love" android:onClick="playClip"
            android:layout_column="3" android:layout_row="2" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/mild_winters"
            android:src="@drawable/mild_winters" android:onClick="playClip"
            android:layout_column="4" android:layout_row="2" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/sooo"
            android:src="@drawable/sooo" android:onClick="playClip"
            android:layout_column="5" android:layout_row="2" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/perfectionist"
            android:src="@drawable/perfectionist" android:onClick="playClip"
            android:layout_column="0" android:layout_row="3" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:borderlessButtonStyle"
            android:id="@+id/lava"
            android:src="@drawable/lava" android:onClick="playClip"
            android:layout_column="1" android:layout_row="3" android:layout_marginLeft="@dimen/between_buttons" android:layout_marginTop="@dimen/between_buttons"
             />
</GridLayout>